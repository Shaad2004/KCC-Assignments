#include<stdio.h>
int main() {
    int n,i,max,c=0;
    scanf("%d",&n);
    int arr[n];
    for (i=0;i<n;i++)
    {scanf("%d",&arr[i]);
    }
    max=arr[0];
    for (i=0;i<n;i++)
    {if (max<=arr[i])
    max=arr[i];
    }
    for (i=0;i<n;i++)
    if (max==arr[i])
    {c+=1;
    }
    printf("%d",c);
    int getch();
}
